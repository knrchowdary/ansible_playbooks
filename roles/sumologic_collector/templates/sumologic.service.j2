[Unit] 
Description=Sumo Logic Collector

[Service] 
Type=forking 
ExecStart={{sumo_base_dir}}/collector start 
ExecStop={{sumo_base_dir}}/collector stop

# Give a reasonable amount of time for the server to start up/shut down 
TimeoutSec=300

# restart on failure
Restart=on-failure
RestartSec=30
StartLimitIntervalSec=300
StartLimitBurst=5

[Install] 
WantedBy=multi-user.target